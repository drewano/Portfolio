<style is:global>
  .shiny-sec {
    background: linear-gradient(135deg, #00ff41 25%, #b3ffcc 50%, #00ff41 75%);
    background-size: 400% 100%;
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
    animation: shine 3s linear infinite;
  }

  @keyframes shine {
    0% {
      background-position: 100% 50%;
    }
    30%,
    70% {
      background-position: 0% 50%;
    }
  }
  
  @keyframes blink {
    0%, 100% {
      opacity: 1;
    }
    50% {
      opacity: 0;
    }
  }
  
  .animate-blink {
    animation: blink 0.8s infinite;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const profileContainer = document.getElementById('profile-container');
    const profileImage = document.getElementById('profile-image');
    const asciImage = document.getElementById('asci-image');
    const greeting = document.getElementById('greeting');
    
    profileContainer.addEventListener('click', () => {
      if (profileImage.classList.contains('hidden')) {
        profileImage.classList.remove('hidden');
        asciImage.classList.add('hidden');
        greeting.innerHTML = 'Bonjour, je suis <span class="text-[var(--sec)]">Andrew Assef</span>';
      } else {
        profileImage.classList.add('hidden');
        asciImage.classList.remove('hidden');
        greeting.innerHTML = 'Bonjour, je suis <span class="text-[var(--sec)]">@drewano</span>';
      }
    });

    // Animation typewriter
    const typewriterElement = document.getElementById('typewriter');
    const text = "Intelligence Artificielle";
    let index = 0;
    const cursorHtml = '<span class="inline-block border-r-4 border-[var(--sec)] animate-blink">&nbsp;</span>';
    
    function type() {
      if (index < text.length) {
        // Afficher le texte déjà tapé
        const currentText = text.substring(0, index);
        // Ajouter le curseur avant la prochaine lettre à taper
        typewriterElement.innerHTML = currentText + cursorHtml;
        
        // Après un court délai, ajouter la lettre
        setTimeout(() => {
          index++;
          const newText = text.substring(0, index);
          typewriterElement.innerHTML = newText + cursorHtml;
          
          // Continuer l'animation
          setTimeout(type, 70);
        }, 50);
      } else {
        // Animation terminée, afficher le texte complet sans curseur
        typewriterElement.innerHTML = text;
      }
    }
    
    // Démarrer l'animation après un court délai
    setTimeout(() => {
      typewriterElement.innerHTML = cursorHtml;
      setTimeout(type, 100);
    }, 500);
  });
</script>
