---
interface Experience {
  title: string;
  company: string;
  period: string;
  description: string;
  current?: boolean;
}

const experiences: Experience[] = [
  {
    title: "AI & Data Project Engineer",
    company: "Renault Group",
    period: "Sept 2025 – Present",
    description: "Full-stack web app for automated technical offer analysis with Generative AI.",
    current: true
  },
  {
    title: "Co-founder",
    company: "autoads",
    period: "Oct 2025 – Present",
    description: "AI-powered video ad generation from website URLs. 300+ users in 48 hours after launch.",
    current: true
  },
  {
    title: "AI Developer",
    company: "AFPA",
    period: "Sept 2024 – Aug 2025",
    description: "RAG applications, Google reviews automation, AI training for 100+ employees."
  },
  {
    title: "IT Support Technician",
    company: "Careside",
    period: "Sept 2022 – Aug 2024",
    description: "MDM deployment for 500+ devices, PowerShell automation, network configuration."
  },
];

interface Education {
  degree: string;
  school: string;
  period: string;
}

const education: Education[] = [
  {
    degree: "Engineering Degree in AI",
    school: "ESIEA",
    period: "2025 – 2028"
  },
  {
    degree: "Bachelor's in Computer Science",
    school: "CNAM Paris",
    period: "2024 – 2025"
  },
];
---

<section id="experience" class="mb-32">
  <div class="grid md:grid-cols-[1fr_2fr] gap-12 md:gap-24">
    <div>
      <h2 class="text-4xl md:text-5xl font-serif font-medium text-white tracking-tight sticky top-24">Experience</h2>
    </div>

    <div class="space-y-16">
      {
        experiences.map((exp) => (
          <div class="group">
            <div class="flex flex-col sm:flex-row sm:items-baseline justify-between mb-2">
              <h3 class="text-2xl font-serif text-neutral-200">{exp.company}</h3>
              <span class="text-sm font-mono text-neutral-500">{exp.period}</span>
            </div>
            <p class="text-lg text-white mb-2 font-light">{exp.title}</p>
            <p class="text-neutral-400 font-light leading-relaxed max-w-lg">{exp.description}</p>
          </div>
        ))
      }
    </div>
  </div>

  <div class="grid md:grid-cols-[1fr_2fr] gap-12 md:gap-24 mt-24">
    <div>
      <h2 class="text-4xl md:text-5xl font-serif font-medium text-white tracking-tight sticky top-24">Education</h2>
    </div>

    <div class="space-y-12">
      {
        education.map((edu) => (
          <div class="group border-b border-neutral-800 pb-8 last:border-0">
            <div class="flex flex-col sm:flex-row sm:items-baseline justify-between mb-2">
              <h3 class="text-xl font-serif text-neutral-200">{edu.school}</h3>
              <span class="text-sm font-mono text-neutral-500">{edu.period}</span>
            </div>
            <p class="text-neutral-400 font-light">{edu.degree}</p>
          </div>
        ))
      }
    </div>
  </div>
</section>
