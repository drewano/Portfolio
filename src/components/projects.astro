---
interface Project {
  title: string;
  description: string;
  link: string;
  tech?: string;
}

const projects: Project[] = [
  {
    title: "autoads",
    description: "Transform your website into AI-generated video ads. Paste a URL, write a prompt, get a video.",
    link: "https://autoads.pro",
    tech: "Next.js, Python, AI"
  },
  {
    title: "dodai",
    description: "Open-source browser extension that turns your browser into a second brain, powered by local AI with Ollama.",
    link: "https://github.com/drewano/dodai",
    tech: "TypeScript, Ollama"
  },
  {
    title: "France-GPT",
    description: "Collection of AI agents using French government APIs (Legifrance, INSEE, Data.Inclusion) as MCP tools.",
    link: "https://github.com/drewano/France-GPT",
    tech: "Python, MCP"
  },
  {
    title: "docasis-proto",
    description: "Complete RAG pipeline with Gemini, Qdrant and Streamlit to create a conversational agent for your knowledge base.",
    link: "https://github.com/drewano/docasis-proto",
    tech: "Python, Qdrant, Gemini"
  },
];
---

<section id="projects" class="mb-32">
  <h2 class="text-4xl md:text-5xl font-serif font-medium mb-16 text-white tracking-tight">Selected Works</h2>

  <div class="space-y-20">
    {
      projects.map((project, index) => (
        <a
          href={project.link}
          target="_blank"
          rel="noopener noreferrer"
          class="block group relative"
        >
          <div class="flex flex-col md:flex-row gap-8 items-start md:items-end pb-8 border-b border-neutral-800 transition-colors duration-500 group-hover:border-neutral-600">
             <div class="w-full md:w-1/4">
                <span class="text-xs font-mono text-neutral-500 tracking-widest">0{index + 1}</span>
             </div>

             <div class="w-full md:w-2/4">
                <h3 class="text-3xl font-serif font-medium text-neutral-200 group-hover:text-white transition-colors mb-2">{project.title}</h3>
                <p class="text-neutral-500 font-light leading-relaxed max-w-md">{project.description}</p>
             </div>

             <div class="w-full md:w-1/4 text-right">
                <span class="text-xs font-mono text-neutral-600 uppercase tracking-wider group-hover:text-neutral-400 transition-colors">{project.tech}</span>
             </div>
          </div>
        </a>
      ))
    }
  </div>

  <div class="mt-16 text-center">
    <a
      href="https://github.com/drewano"
      target="_blank"
      aria-label="View Archive on GitHub"
      class="inline-block text-neutral-500 hover:text-white transition-colors"
    >
