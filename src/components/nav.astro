---
const navItems = [
  { label: "Projects", href: "#projects" },
  { label: "Experience", href: "#experience" },
  { label: "Contact", href: "#contact" },
];
---

<nav class="mb-24 sticky top-6 z-50 flex justify-center">
  <div class="inline-flex gap-8 bg-neutral-900/80 backdrop-blur-md px-8 py-3 rounded-full border border-neutral-800 shadow-2xl">
    {
      navItems.map((item) => (
        <a
          href={item.href}
          class="text-neutral-400 hover:text-white transition-colors text-xs uppercase tracking-widest font-medium"
        >
          {item.label}
        </a>
      ))
    }
  </div>
</nav>
