---
import Spotlight from "../components/Spotlight.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Andrew Assef - AI & Data Project Engineer" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@100..800&display=swap"
      rel="stylesheet"
    />

    <title>{title}</title>
  </head>
  <body class="bg-ide-bg text-ide-fg font-mono antialiased overflow-hidden h-screen w-screen selection:bg-ide-accent/30 selection:text-ide-accent">
    <Spotlight />
    <div class="fixed inset-0 pointer-events-none opacity-[0.03] z-50 bg-[url('https://grainy-gradients.vercel.app/noise.svg')]"></div>
    <main class="h-full w-full flex flex-col relative z-10">
      <slot />
    </main>
  </body>
</html>

<style is:global>
  :root {
    color-scheme: dark;
  }

  /* Scrollbar customization */
  ::-webkit-scrollbar {
    width: 10px;
    height: 10px;
  }

  ::-webkit-scrollbar-track {
    background: #0a0a0a;
  }

  ::-webkit-scrollbar-thumb {
    background: #262626;
    border: 2px solid #0a0a0a;
    border-radius: 4px;
  }

  ::-webkit-scrollbar-thumb:hover {
    background: #404040;
  }

  ::-webkit-scrollbar-corner {
    background: #0a0a0a;
  }
</style>
